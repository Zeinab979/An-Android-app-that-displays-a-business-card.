<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/mint"
    android:padding="16dp">
    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mint"
        android:layout_margin="@dimen/small_margin"
        android:contentDescription="@string/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_arrow_back_24"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/medium_dimen"
        android:layout_height="@dimen/medium_dimen"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:contentDescription="@string/logo"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_person_24"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/name"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/title_size"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        />

    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/android_developer_extraordinaire"
        android:textColor="@color/green"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:drawableStartCompat="@drawable/baseline_work_24"
        android:drawablePadding="@dimen/drawable_padding"

        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:drawablePadding="@dimen/drawable_padding"
        android:text="@string/email"
        android:textColor="@color/green"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/baseline_email_24"
        app:layout_constraintTop_toBottomOf="@id/job"
        app:layout_constraintEnd_toEndOf="@+id/job"
        app:layout_constraintStart_toStartOf="@+id/job"
        />

    <ImageButton
        android:id="@+id/linkedIn"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginEnd="@dimen/small_margin"
        android:src="@drawable/circle_linkedin_512"
        android:scaleType="centerCrop"
        android:background="@color/mint"
        app:layout_constraintStart_toStartOf="@id/job"
        app:layout_constraintEnd_toStartOf="@id/gitHub"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:contentDescription="@string/linkedin_account"
        />
    <ImageButton
        android:id="@+id/gitHub"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginEnd="@dimen/small_margin"
        android:src="@drawable/github_logo_5f384d0265_seeklogo_com"
        android:scaleType="centerCrop"
        android:background="@color/mint"
        app:layout_constraintStart_toEndOf="@id/linkedIn"
        app:layout_constraintEnd_toStartOf="@id/faceBook"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:contentDescription="@string/github_account"
        />
    <ImageButton
        android:id="@+id/faceBook"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginEnd="@dimen/small_margin"
        android:src="@drawable/fb_icon_icons"
        android:scaleType="centerCrop"
        android:background="@color/mint"
        app:layout_constraintStart_toEndOf="@id/gitHub"
        app:layout_constraintEnd_toEndOf="@id/job"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:contentDescription="@string/facebook_account"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
